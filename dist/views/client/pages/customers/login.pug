extends ../../layouts/layouts.pug

block css
     link(rel="stylesheet" href="/client/css/home/index.css")
block script
     script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
     script(src="https://cdn.jsdelivr.net/npm/axios@1.7.9/dist/axios.min.js") 
     script(type="module" src="/client/js/customer/login.js") 

block main
     div(class=`py-[50px]`)
          div(class=`container`)
               div(class=`w-1/2 mx-auto flex flex-col gap-y-[20px]`) 
                    sl-input(label = 'Tên đăng nhập hoặc email' name='username')
                    sl-input(type='password' label = 'Mật khẩu' name='password' password-toggle clearable oncopy="return false" oncut="return false" onpaste="return false" onselectstart="return false" ondragstart="return false" ondrop="return false")
                    sl-button(variant="primary" btn-login = `${ROUTERS.CLIENT.CUSTOMER.PATH}${ROUTERS.CLIENT.CUSTOMER.LOGIN}`) Đăng nhập